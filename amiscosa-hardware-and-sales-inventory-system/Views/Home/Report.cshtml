@{
    ViewData["Title"] = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model amiscosa_hardware_and_sales_inventory_system.Domain.Models.ReportModel;
    int counter = 1;
}

<div class="content-title">
    <h1>Reports</h1>
    <p>Main Menu | Reports</p>
</div>

<div class="content-wrapper">
    <div class="content-container" id="report-content-container">
        <div class="revenue-sort-date rounded-box">
            <svg xmlns="http://www.w3.org/2000/svg" width="17" height="16" viewBox="0 0 17 16" fill="none">
                <g clip-path="url(#clip0_219_591)">
                    <path d="M2.15043 2.28564C1.84732 2.28564 1.55663 2.40606 1.3423 2.62038C1.12798 2.83471 1.00757 3.12539 1.00757 3.4285V14.2856C1.00757 14.5887 1.12798 14.8795 1.3423 15.0938C1.55663 15.308 1.84732 15.4285 2.15043 15.4285H14.7219C15.0249 15.4285 15.3157 15.308 15.53 15.0938C15.7443 14.8795 15.8647 14.5887 15.8647 14.2856V3.4285C15.8647 3.12539 15.7443 2.83471 15.53 2.62038C15.3157 2.40606 15.0249 2.28564 14.7219 2.28564H12.4361" stroke="#FF9400" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M1.00757 6.28564H15.8647" stroke="#FF9400" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M4.43604 0.571289V3.99986" stroke="#FF9400" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M12.436 0.571289V3.99986" stroke="#FF9400" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M4.43604 2.28564H10.1503" stroke="#FF9400" stroke-linecap="round" stroke-linejoin="round" />
                </g>
                <defs>
                    <clipPath id="clip0_219_591">
                        <rect width="16" height="16" fill="white" transform="translate(0.436035)" />
                    </clipPath>
                </defs>
            </svg>
            <select name="month-dropdown" id="month-dropdown">
                <option value="2024-01-01">January 2024</option>
                <option value="2024-02-01">February 2024</option>
                <option value="2024-03-01">March 2024</option>
                <option value="2024-04-01">April 2024</option>
                <option value="2024-05-01">May 2024</option>
                <option value="2024-06-01">June 2024</option>
                <option value="2024-07-01">July 2024</option>
                <option value="2024-08-01">August 2024</option>
                <option value="2024-09-01">September 2024</option>
                <option value="2024-10-01">October 2024</option>
                <option value="2024-11-01">November 2024</option>
                <option value="2024-12-01">December 2024</option>
            </select>
        </div>

        <div class="revenue-and-profit">
            <div class="total-revenue">
                <p>Total Revenue</p>
                <h1 id="total-revenue">₱ @Model.TotalRevenue</h1>
            </div>

            <div class="total-profit">
                <p>Total Profit</p>
                <h1 id="total-profit">₱ @Model.TotalProfit</h1>
            </div>
        </div>

        

        <div class="report-statistic">
            <div>
                <p>
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 28 28" fill="none">
                        <g clip-path="url(#clip0_219_600)">
                            <path d="M12.6761 7.39828C12.5883 7.14986 12.4528 6.92398 12.2806 6.73162C11.9144 6.32244 11.3822 6.06494 10.7899 6.06494H9.24182C8.25584 6.06494 7.45654 6.86424 7.45654 7.85022C7.45654 8.68918 8.04072 9.41496 8.8603 9.59426L11.2173 10.1098C12.1355 10.3107 12.7899 11.1244 12.7899 12.0642C12.7899 13.1688 11.8945 14.065 10.7899 14.065H9.45656C8.58574 14.065 7.8449 13.5084 7.57034 12.7316" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M10.1233 6.06496V4.06494" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M10.1233 16.065V14.0649" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M13.9375 26.9976V16.4976C13.9375 15.8345 14.2009 15.1986 14.6697 14.7298C15.1386 14.261 15.7745 13.9976 16.4375 13.9976C17.1005 13.9976 17.7364 14.261 18.2053 14.7298C18.6741 15.1986 18.9375 15.8345 18.9375 16.4976V21.9976H22.9376C23.9984 21.9976 25.0158 22.419 25.766 23.1692C26.516 23.9192 26.9376 24.9366 26.9376 25.9976V26.9976" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M10.125 19.1274C5.11992 19.1274 1.0625 15.07 1.0625 10.0649C1.0625 5.05986 5.11992 1.00244 10.125 1.00244C15.1301 1.00244 19.1875 5.05986 19.1875 10.0649C19.1875 10.4857 19.1588 10.8997 19.1033 11.3053" stroke-width="1.5" stroke-linecap="round" />
                        </g>
                        <defs>
                            <clipPath id="clip0_219_600">
                                <rect width="28" height="28" fill="white" />
                            </clipPath>
                        </defs>
                    </svg>
                    Product Sold
                </p>
                <h1 id="products-sold">@Model.NumberOfProductsSold</h1>
            </div>
            <div>
                <p>
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 30 32" fill="none">
                        <path d="M1 1H6.2631L8.13803 20.9615C8.21596 21.5118 8.47699 22.0134 8.87303 22.3738C9.26905 22.7343 9.7734 22.9293 10.2931 22.9231H23.8702C24.3402 22.9494 24.8053 22.8102 25.1943 22.5268C25.5835 22.2435 25.8753 21.8315 26.0253 21.3538L28.8916 12.1231C28.9985 11.776 29.0269 11.4068 28.9743 11.0457C28.9219 10.6846 28.7901 10.342 28.5898 10.0462C28.3812 9.73157 28.1022 9.47802 27.7785 9.30868C27.4548 9.13937 27.0964 9.05968 26.7365 9.07692H7.01739" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M23.5038 31.0001C22.9088 31.0001 22.4263 30.4834 22.4263 29.8462C22.4263 29.2091 22.9088 28.6924 23.5038 28.6924C24.0988 28.6924 24.5814 29.2091 24.5814 29.8462C24.5814 30.4834 24.0988 31.0001 23.5038 31.0001Z" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M9.49576 31.0001C8.90063 31.0001 8.41821 30.4834 8.41821 29.8462C8.41821 29.2091 8.90063 28.6924 9.49576 28.6924C10.0909 28.6924 10.5733 29.2091 10.5733 29.8462C10.5733 30.4834 10.0909 31.0001 9.49576 31.0001Z" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    Transactions
                </p>
                <h1 id="transactions-done">@Model.NumberOfTransactionsDone</h1>
            </div>
        </div>

        <div class="sales-report-wrapper">
            <div class="sales-report-content-container">
                <table id="sales-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Product Name</th>
                            <th>Product Sold</th>
                            <th>Sales</th>
                        </tr>
                    </thead>
                    <tbody id="sales-table-body">
                        
                        @foreach(amiscosa_hardware_and_sales_inventory_system.Domain.DataTransferObjects.ProductSoldDataTransferObject productSold in Model.ProductList)
                        {
                            <tr>
                                <td>@counter</td>
                                <td>@productSold.ProductName</td>
                                <td>@productSold.ProductSold</td>
                                <td>@productSold.ProductSales</td>
                            </tr>

                            counter++;
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/js/report.js"></script>
}