@functions {
    public string IsPageActive(string controller, string action)
    {
        string isActive = "";

        if (Context.Request.RouteValues["controller"]!.ToString() == controller &&
            Context.Request.RouteValues["action"]!.ToString() == action)
        {
            isActive = "current";
        }

        return isActive;
    }
}

